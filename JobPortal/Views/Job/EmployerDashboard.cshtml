@{
    Layout = "~/Views/Shared/_SavedLayout.cshtml";
}
@model List<JobPortal.Context.JobPost>
@{
    ViewBag.Title = "EmployerDashboard";
}





<h2>Employer Dashboard</h2>

<a href="/Job/PostJob" class="btn btn-primary mb-3">+ Post a New Job</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Posted On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.CreatedAt</td>
                <td>
                    <a href="/Job/NoOfApplicants/@job.JobId" class="btn btn-sm btn-info">Applications</a>
                    <a href="@Url.Action("PostJob", new { job.JobId })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Job/DeleteJob/@job.JobId"
                       onclick="return confirm('Are you sure you want to delete this job?');"
                       class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
