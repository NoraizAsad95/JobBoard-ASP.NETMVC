@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model JobPortal.Context.User
@{
    ViewBag.Title = "Sign Up";
  
}

<div class="container" style="max-width: 500px; margin-top: 50px;">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center text-white" style="background-color: #a084ca;">
            <h3>Sign Up</h3>
        </div>
        <div class="card-body" style="background-color: #f8f5fc;">
            @using (Html.BeginForm("AddSignUp", "Home", FormMethod.Post))
            {
                <div class="form-group mb-3">
                    <label>Full Name</label>
                    @Html.TextBoxFor(m => m.user_fullname, new { @class = "form-control", placeholder = "Enter your name", required = "required" })
                </div>

                <div class="form-group mb-3">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.user_email, new { @class = "form-control", placeholder = "Enter email", required = "required" })
                </div>

                <div class="form-group mb-3">
                    <label>Password</label>
                    @Html.PasswordFor(m => m.user_password, new { @class = "form-control", placeholder = "Enter password", required = "required" })
                </div>

                <div class="form-group mb-4">
                    <label>
                        <input type="checkbox" name="IsEmployer" value="true" />
                        I want to post jobs (Sign up as Employer)
                    </label>
                </div>

                <input type="submit" value="Sign Up" class="btn btn-primary w-100" style="background-color: #a084ca; border: none;" />
            }

            <hr />
            <div class="text-center">
                <p>Already have an account? <a href="@Url.Action("SignIn", "Home")" class="text-decoration-none text-purple">Sign In</a></p>
            </div>
        </div>
    </div>
</div>
