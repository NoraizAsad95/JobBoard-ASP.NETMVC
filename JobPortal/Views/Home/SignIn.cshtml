@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model JobPortal.Context.User
@{
    ViewBag.Title = "Sign In";
    
}

<div class="container" style="max-width: 500px; margin-top: 50px;">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center text-white" style="background-color: #a084ca;">
            <h3>Sign In</h3>
        </div>
        <div class="card-body" style="background-color: #f8f5fc;">
            @using (Html.BeginForm("AddSignIn", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.user_email, new { @class = "form-control", placeholder = "Enter email", required = "required" })
                </div>

                <div class="form-group mb-4">
                    <label>Password</label>
                    @Html.PasswordFor(m => m.user_password, new { @class = "form-control", placeholder = "Enter password", required = "required" })
                </div>

                <button type="submit" class="btn btn-primary w-100" style="background-color: #a084ca; border: none;">Sign In</button>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <hr />
            <div class="text-center">
                <p>Don't have an account? <a href="@Url.Action("SignUp", "Home")" class="text-decoration-none text-purple">Sign Up</a></p>
            </div>
        </div>
    </div>
</div>
